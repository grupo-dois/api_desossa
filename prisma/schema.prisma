// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model bovinos {
  id                  Int        @id @default(autoincrement())
  nome                String
  data_abate          Int
  data_desossa        Int
  raca                String
  peso_carcaca        Float
  responsavel_desossa String
  dianteiro           dianteiro?
  traseiro            traseiro?
}

model dianteiro {
  nome_produto        String
  peso                Int
  preco_custo         Float
  percent_preco_custo Int
  preco_venda         Float
  margem              Int
  id                  bovinos @relation(fields: [dianteiro_id], references: [id])
  dianteiro_id        Int     @unique
}

model traseiro {
  nome_produto        String
  peso                Int
  preco_custo         Float
  percent_preco_custo Int
  preco_venda         Float
  margem              Int
  id                  bovinos @relation(fields: [traseiro_id], references: [id])
  traseiro_id         Int     @unique
}
